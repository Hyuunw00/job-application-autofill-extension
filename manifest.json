{
  "manifest_version": 3,
  "name": "입사지원 자동완성",
  "version": "2.0.0",
  "description": "AI가 스스로 판단하여 입사지원 폼을 자동으로 채워주는 크롬 익스텐션",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/main-world-executor.js"],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/code-executor.js",
        "content/ai-engine.js",
        "content/autofill.js",
        "content/ui.js",
        "content/index.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
